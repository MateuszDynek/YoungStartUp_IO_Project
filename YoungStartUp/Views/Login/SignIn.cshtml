@model YoungStartUp.Models.LogInUser
@{
    ViewData["Title"] = "SignIn";
}




@using (Html.BeginForm("SignIn", "Login", FormMethod.Post,
                                  new { @class = "login-form" }))
{
    <div class="login-form-logo-container">
        <img class="login-form-logo" src="~/img/logo.png" alt="Logo">
    </div>
    <div class="login-form-content">
        <div class="login-form-header">Login to your account</div>
        @if (ViewBag.error != null)
        {
            <div class="d-flex justify-content-center">
                <h5><span class="badge badge-danger">@ViewBag.error</span></h5>
            </div>
        }
        <h3>Username</h3>
        @Html.TextBoxFor(m => m.Username, new { @class = "login-form-input" })
        <h3>Password</h3>
        @Html.PasswordFor(m => m.Password, new { @class = "login-form-input" })
        <button class="login-form-button" type="submit" value="SignIn">Login</button>
    </div>
}



