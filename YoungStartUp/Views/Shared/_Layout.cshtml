<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YoungStartUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<body style="background-image: linear-gradient( #545454, #043887)">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm my-border-bottom box-shadow mb-3" style="background-image: linear-gradient(to bottom right, #545454, #043887)">
            <div class="container">
                <img class="main-logo" src="~/img/logo.png" />
                <a class="navbar-brand logo-style" asp-area="" asp-controller="Home" asp-action="Index">YoungStartUp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-button" asp-area="" asp-controller="Home" asp-action="Index">Main Page</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link nav-button" asp-area="" asp-controller="BrowseProjects" asp-action="ProjectsMainPage">Browse Projects</a>
                        </li>
                        @using Microsoft.AspNetCore.Http;
                        @if (@Context.Session.GetString("username") != null)
                        {
                            <li class="nav-item" style="padding-left: 250px">
                                <h3><span class="badge badge-success">Hello @Context.Session.GetString("username")</span></h3>
                            </li>
                            @if (@Context.Session.GetString("username") == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link signup-button" asp-area="" asp-controller="AdminLogin" asp-action="AdminPanel">Admin Panel</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link signup-button" asp-area="" asp-controller="UserPanel" asp-action="UserPanel">My Account</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link signin-button" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item" style="padding-left: 310px">
                                <a class="nav-link signin-button" asp-area="" asp-controller="Login" asp-action="SignIn">Sign in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link signup-button" asp-area="" asp-controller="Register" asp-action="SignUp">Sign up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="background-color: transparent">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="my-border-top footer text-muted navbar navbar-toggleable-sm" style="background-image: linear-gradient(to bottom right, #545454, #043887)">
        <div class="container">
            &copy; 2021 - YoungStartUp - <a style="margin-right:830px" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            @if (@Context.Session.GetString("username") == null)
            {
                <a class="signin-button" style="text-decoration:none;" asp-area="" asp-controller="AdminLogin" asp-action="AdminLogin">Admin</a>
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
