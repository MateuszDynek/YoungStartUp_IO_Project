@model YoungStartUp.Models.Project
@{
    ViewData["Title"] = "Browse Projects";
}
<div>
    <h1 class="nav-link" style="font-size:25px";>@Model.Title</h1>
    <div class="box box1" style="height:285px">
        @using (Html.BeginForm("UserProjectPage", "BrowseProjects", FormMethod.Post))
        {

            @Html.HiddenFor(x => x.IdProject)

        <button type="submit" style="background-color:transparent; border:none;">


            @if (((int)Model.Target) == 0)
            {

                <img class="project-img" src="~/img/game-console.png" />
            }
            else if ((int)Model.Target == 1)
            {
                <img class="project-img" src="~/img/internet-of-things.png" />
            }
            else if ((int)Model.Target == 2)
            {
                <img class="project-img" src="~/img/programing.png" />
            }
            else if ((int)Model.Target == 3)
            {
                <img class="project-img" src="~/img/web_app.png" />
            }
            else if ((int)Model.Target == 4)
            {
                <img class="project-img" src="~/img/bot.png" />
            }
            else
            {
                <img class="project-img" src="~/img/antispam.png" />
            }

            <p>
                @Model.Description
            </p>

        </button>
        }
    
    </div>
    </div>
